import matplotlib.pyplot as plt
import numpy as np

# Number of transactions: 100 to 5000 with gap of 100
transactions = np.arange(100, 5100, 100)

# Storage Cost Model (in KB) â€” B-DAC slightly better than Cross-DistBlock
storage_bdac = 0.26 * transactions + 6              # Most efficient
storage_cross_distblock = 0.28 * transactions + 8   # Slightly higher
storage_bcs = 0.36 * transactions + 12
storage_bmc_sdn = 0.39 * transactions + 15
storage_frchain = 0.42 * transactions + 20
storage_smartblock = 0.40 * transactions + 18

# Plotting
plt.figure(figsize=(12, 7))

plt.plot(transactions, storage_bdac, 's--', label='B-DAC', color='green')
plt.plot(transactions, storage_cross_distblock, 'x-', label='Cross-DistBlock', color='red')
plt.plot(transactions, storage_bcs, 'D-', label='BCS', color='purple')
plt.plot(transactions, storage_bmc_sdn, '^-', label='BMC-SDN', color='orange')
plt.plot(transactions, storage_frchain, 'o-', label='FRChain', color='blue')
plt.plot(transactions, storage_smartblock, 'v-', label='SmartBlock-SDN', color='brown')

plt.title('Storage Cost vs Number of Transactions', fontsize=20)
plt.xlabel('Number of Transactions', fontsize=16)
plt.ylabel('Storage Cost (KB)', fontsize=16)
plt.legend(fontsize=12)
plt.grid(True)
plt.tight_layout()
plt.show()
